{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-dr-test-scus"
		},
		"BLOB_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'BLOB'"
		},
		"SQLDB_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'SQLDB'"
		},
		"BLOBPE_properties_privateLinkResourceId": {
			"type": "string",
			"defaultValue": "/subscriptions/df9f29b0-8a99-408f-bb18-fdeed1f47c62/resourceGroups/rg-adf-dr-test/providers/Microsoft.Storage/storageAccounts/blobadfdrtestscus"
		},
		"BLOBPE_properties_groupId": {
			"type": "string",
			"defaultValue": "blob"
		},
		"BLOBPE_properties_fqdns": {
			"type": "array",
			"defaultValue": [
				"blobadfdrtestscus.blob.core.windows.net"
			]
		},
		"SQLPE_properties_privateLinkResourceId": {
			"type": "string",
			"defaultValue": "/subscriptions/df9f29b0-8a99-408f-bb18-fdeed1f47c62/resourceGroups/rg-adf-dr-test/providers/Microsoft.Sql/servers/sql-adf-dr-wus3"
		},
		"SQLPE_properties_groupId": {
			"type": "string",
			"defaultValue": "sqlServer"
		},
		"SQLPE_properties_fqdns": {
			"type": "array",
			"defaultValue": [
				"sql-adf-dr-wus3.database.windows.net"
			]
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "adf-dr-test-scus_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"BLOB_connectionString": {
						"value": "[parameters('BLOB_connectionString')]"
					},
					"SQLDB_connectionString": {
						"value": "[parameters('SQLDB_connectionString')]"
					},
					"BLOBPE_properties_privateLinkResourceId": {
						"value": "[parameters('BLOBPE_properties_privateLinkResourceId')]"
					},
					"BLOBPE_properties_groupId": {
						"value": "[parameters('BLOBPE_properties_groupId')]"
					},
					"BLOBPE_properties_fqdns": {
						"value": "[parameters('BLOBPE_properties_fqdns')]"
					},
					"SQLPE_properties_privateLinkResourceId": {
						"value": "[parameters('SQLPE_properties_privateLinkResourceId')]"
					},
					"SQLPE_properties_groupId": {
						"value": "[parameters('SQLPE_properties_groupId')]"
					},
					"SQLPE_properties_fqdns": {
						"value": "[parameters('SQLPE_properties_fqdns')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}